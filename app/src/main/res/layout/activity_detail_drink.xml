<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.suci.suciwulandaagusti_1202150266_modul3.DetailDrink">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/aqua"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aqua"
        android:textSize="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Air mineral adalah air yang mengandung mineral atau bahan-bahan larut lain yang mengubah rasa atau memberi nilai-nilai terapi. Banyak kandungan Garam, sulfur, dan gas-gas yang larut di dalam air ini. Air mineral biasanya masih memiliki buih. Air mineral bersumber dari mata air yang berada di alam."
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_volumeAir"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_battery" />

        <TextView
            android:id="@+id/tv_liter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_volumeAir"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="0L"
            android:textSize="20dp" />


        <ImageButton
            android:id="@+id/ib_plus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/iv_volumeAir"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_toEndOf="@+id/tv_liter"
            android:layout_toRightOf="@+id/tv_liter"
            android:onClick="onPlus"
            android:src="@drawable/ic_add" />

        <ImageButton
            android:id="@+id/ib_minus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/iv_volumeAir"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:layout_toLeftOf="@+id/tv_liter"
            android:layout_toStartOf="@+id/tv_liter"
            android:onClick="onMinus"
            android:src="@drawable/ic_remove" />


    </RelativeLayout>
</LinearLayout>
